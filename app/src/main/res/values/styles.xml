<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/backgroundColor_Dark</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationSliding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationSliding</item>
    </style>

    <style name="AppTheme.NoActionBar.PlayingActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationSliding</item>
    </style>

    <style name="Setting_AlertTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="android:actionModeBackground">@android:color/transparent</item>
        <item name="android:actionModeStyle">@style/CustomActionMode</item>
    </style>

    <style name="CustomActionMode" parent="@style/Widget.AppCompat.ActionMode">

        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="FullScreen.TransparentBG" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/Text_LightGray</item>
        <item name="android:textColorSecondary">#636363</item>
        <item name="android:alertDialogTheme">@style/Setting_AlertTheme</item>
        <item name="android:dialogTheme">@style/Setting_AlertTheme</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationSliding</item>
    </style>

    <style name="TextAppearance.AppCompat.NoActionBar" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/Text_LightGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.AppCompat.Playing" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/Text_LightGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">15</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="buttonTint">#fff</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">

        <item name="android:popupBackground">@drawable/bgcolor_drawable</item>

    </style>

    <style name="AlertDialog.AppCompat.ProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/backgroundColor_Dark</item>
        <item name="android:windowBackground">@color/backgroundColor_Dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityAnimationSliding">
        //进入新界面时
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out</item>
        //退回旧界面时
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out</item>
    </style>

    <style name="ActivityAnimationFading">
        //进入新界面时
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in_fade</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out_fade</item>
        //退回旧界面时
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in_fade</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out_fade</item>
    </style>

    <style name="WelcomeStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationFading</item>
    </style>

</resources>
