<resources>

    <!--Activity 切换动画  滑动切换样式-->
    <style name="ActivityAnimationSliding">
        <!--进入新界面时-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out</item>

        <!--退回旧界面时-->
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out</item>
    </style>

    <!--基础主题样式-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!--主色调-->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--副色调-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--强调色-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--是否绘制状态栏背景-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--状态栏颜色-->
        <item name="android:statusBarColor">@color/ToolBar_color</item>

        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/NavBar_Color</item>

        <!--Ripple 动画颜色-->
        <item name="colorControlHighlight">@color/colorAccent</item>

        <!--Window 默认背景-->
        <item name="android:windowBackground">@color/backgroundColor_Dark</item>

        <!--默认 Activity 切换动画-->
        <item name="android:windowAnimationStyle">@style/ActivityAnimationSliding</item>

    </style>

    <!--无标题栏主题样式-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--主界面框架主题样式-->
    <style name="Theme_MainFrameworkActivity" parent="AppTheme.NoActionBar">

        <!--全屏-->
        <item name="android:windowFullscreen">true</item>

    </style>

    <!--播放界面主题样式-->
    <style name="Theme_PlayingActivity" parent="AppTheme.NoActionBar">

        <!--不需要绘制背景-->
        <item name="android:windowBackground">@null</item>

        <!--状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <!--设置界面主题样式-->
    <style name="SettingsTheme" parent="AppTheme">

        <!--标题文字颜色-->
        <item name="android:textColorPrimary">@color/Text_LightGray</item>

        <!--副标题文字颜色-->
        <item name="android:textColorSecondary">#636363</item>

        <!--对话框样式-->
        <item name="android:alertDialogTheme">@style/Setting_AlertTheme</item>

    </style>

    <!--设置界面使用的对话框样式-->
    <style name="Setting_AlertTheme" parent="Theme.AppCompat.Dialog">

        <!--无背景-->
        <item name="android:windowBackground">@null</item>

    </style>

    <!--对话框样式  全屏、透明背景-->
    <style name="Dialog_FullScreen_NoBackground" parent="Theme.AppCompat.Dialog.Alert">

        <!--窗口背景样式-->
        <item name="android:windowBackground">@drawable/myclound_online</item>

        <!--透明背景-->
        <item name="android:background">@null</item>

        <!--文字颜色-->
        <item name="android:textColor">#fff</item>

        <!--布局设置-->
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <!--Toolbar 标题文字样式-->
    <style name="Toolbar_TitleStyle" parent="TextAppearance.AppCompat">

        <!--颜色-->
        <item name="android:textColor">@color/pureWhite</item>

        <!--字号-->
        <item name="android:textSize">15sp</item>

        <!--样式-->
        <item name="android:textStyle">normal</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="buttonTint">#fff</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
