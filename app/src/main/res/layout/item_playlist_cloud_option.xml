<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackgroundBorderless"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="5dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:id="@+id/myclound_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ocwvar.darkpurple.widgets.SquareWidthImageView
            android:id="@+id/myclound_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/text_cloud_title"
            android:textColor="@color/Text_LightGray"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/myclound_bar_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/red" />

    </FrameLayout>

</android.support.v7.widget.CardView>