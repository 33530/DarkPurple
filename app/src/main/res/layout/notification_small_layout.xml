<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/backgroundColor_Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/notification_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:padding="10dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/notification_artist"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/notification_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/notification_next"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:src="@drawable/ic_action_next" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_mainButton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/notification_next"
        android:layout_toStartOf="@+id/notification_next"
        android:background="#00000000"
        android:src="@drawable/ic_action_play" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/notification_back"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/notification_mainButton"
        android:layout_toStartOf="@+id/notification_mainButton"
        android:background="#00000000"
        android:src="@drawable/ic_action_back" />

</RelativeLayout>