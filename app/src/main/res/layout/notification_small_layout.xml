<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/backgroundColor_Dark">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLength="50"
        android:padding="10dp"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/notification_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notification_title"
        android:maxLength="50"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="@color/colorSecond"/>

    <ImageButton
        android:id="@+id/notification_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:src="@drawable/ic_action_next"/>

    <ImageButton
        android:id="@+id/notification_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/notification_mainButton"
        android:background="#00000000"
        android:src="@drawable/ic_action_back"/>

    <ImageButton
        android:id="@+id/notification_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/notification_back"
        android:background="@null"
        android:src="@drawable/ic_action_cancel"/>

    <ImageButton
        android:id="@+id/notification_mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/notification_next"
        android:background="#00000000"
        android:src="@drawable/ic_action_play"/>

</RelativeLayout>